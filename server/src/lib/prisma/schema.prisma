// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    MOD
    USER
}

model Post {
    id String @id @unique @default(cuid())

    title       String
    code        Json
    description String

    generatedImage String?

    animated Boolean
    theme    String

    author User?   @relation(fields: [userId], references: [id])
    userId String?

    @@map("posts")
}

model User {
    id String @id @unique

    username String
    avatar   String
    role     Role

    posts Post[]

    createdAt DateTime @default(now())

    @@map("users")
}
