// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    MOD
    USER
}

model Post {
    id      String @id @unique @default(cuid())
    library String @default("")

    title       String
    code        Json?
    description String?

    generatedImage String?

    animated   Boolean?
    responsive Boolean?
    theme      String?

    userId User   @relation(fields: [author], references: [id])
    author String

    categoryId Category? @relation(fields: [category], references: [value])
    category   String

    @@map("posts")
}

model Category {
    value String @id @unique
    label String

    linkedTemplates Post[]

    @@map("categories")
}

model User {
    id String @id @unique @default(cuid())

    twitterId String? @unique
    discordId String? @unique

    username    String
    avatar      String
    role        Role   @default(USER)
    preferences Json[] @default([])

    posts Post[]

    createdAt DateTime @default(now())

    @@map("users")
}
